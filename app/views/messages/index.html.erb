<% if @over_ten %>
  <%= link_to '以前のメッセージ', '?m=all' %>
<% end %>
<div class="ui segment">
  <% @messages.each do |message| %>
      <% if message.user == current_user %>
        <% if message.body.present? %>
          <div class="item">
            <div class="content">
              <div class="message_content">
                  <div class="header"><strong><%= message.user.name %></strong> <%= message.message_time %></div>
                  <div class="list">
                    <div class="item">
                    <i class="reft triangle icon"> <%= message.body %> </i>
                    <% if message.user == current_user %>
                      <i class="reft triangle icon"></i>
                      <%= message.read ? '既読' : '未読' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% else%>
            <% if message.body.present? %>
              <div class="item-right">
                <div class="content">
                  <div class="message_content-right">
                    <div class="header-right"><strong><%= message.user.name %></strong> <%= message.message_time %></div>
                      <div class="list-right">
                        <div class="item-right">
                          <i class="right triangle icon"> <%= message.body %> </i>
                          <% if message.user == current_user %>
                            <i class="right triangle icon"></i>
                            <%= message.read ? '既読' : '未読' %>
                          <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
  <% end %>
</div>

<%= form_with(model: [@conversation, @message]) do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
    <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
  <div>
    <%= f.submit "メッセージを送る" %>
  </div>
<% end %>
