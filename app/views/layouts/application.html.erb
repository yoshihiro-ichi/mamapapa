<!DOCTYPE html>
<html>
<head>
  <title>MamaPapa</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://fonts.googleapis.com/css?family=Homemade+Apple rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="container">
    <header>
      <h1 class="text-center" calss="title" style= "font-family:Homemade Apple,cursive;">MamaPama</h1>
      <% if user_signed_in? %>
      <%= link_to "HOME", facilities_path %>
      <%= link_to '新規投稿', new_facility_path%>
      <%= link_to 'プロフィール', user_path(current_user.id)%>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <%if current_user.try(:admin?)%>
      <span class="adomin_root"><%= link_to '管理画面へ', rails_admin_path%></span>
      <%end%>
      <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
      <span class= "guest"><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>  </span>

      <span class="admin"><%= link_to '管理ユーザーログイン', users_admin_guest_sign_in_path, method: :post %></span>
      <% end %>
    </header>
    <% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
    <% end %>
    
    <%= yield %>
    <footer>
      <h4 class="text-center">(c)MamaPapa</h4>
    </footer>
  </div>
</body>
</html>
