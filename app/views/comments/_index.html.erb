<ul >
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id  %>"></div>
          <span class="comment_content"><%= comment.content  %></span>
          <% if comment.user.image? %>
            <span><%= image_tag(comment.user.image_url,class:'comment-image')%></span>
          <% else %>
            <span><%= image_tag "noimagehito.png", class:"comment-image" %></span>
          <% end %>
          <span><%= comment.user.name %></span>
        <% if current_user == comment.user %>
         <span><%= link_to "編集", edit_facility_comment_path(facility, comment), remote: true %></span>
         <span><%= link_to "削除", facility_comment_path(comment.facility_id, comment.id), method: :delete, remote: true,
                                       data: { confirm: "本当に削除しますか?"} %></span>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
