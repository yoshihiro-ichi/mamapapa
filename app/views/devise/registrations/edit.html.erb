<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :image %>
    <%= image_tag @user.image.url if @user.image && @user.image.url %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="name_field">
    <br><%= f.label :name %>
    <br><%= f.text_field :name ,placeholder:"名前を入力" %>
  </div>
  <div class="email_field">
    <br><%= f.label :email %>
    <br><%= f.email_field :email ,placeholder:"snmple@sample.com" %>
  </div>
  <div class="password_field">
    <br><%= f.label :password %>
    <br><%= f.password_field :password ,placeholder:"6字以上で入力してください"  %>
  </div>
  <div class="password_confirmation_field">
    <br><%= f.label :password_confirmation %>
    <br><%= f.password_field :password_confirmation,placeholder:"確認用、もう一度入力してくさい"  %>
  </div>
  <br><%= f.submit "プロフィール編集完了" %>
