<%if current_user.try(:admin?)%>
<div class="text-center">

  <th><%= link_to '管理画面へ', rails_admin_path%></th>
<%end%>
  <th><%= link_to 'プロフィール', user_path(current_user.id)%></th>
<h2 class="text-center">施設投稿一覧</h2>
<%= search_form_for @q, url: search_facilities_path do |f| %>
  <%= f.label :title_cont, '施設名' %>
  <%= f.search_field :title_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>
<div class="text-center">
<table style ="margin-left: 25%">
    <tr>
    <th>画像</th>
    <th>投稿者</th>
    <th>施設名</th>
    <th>レビュー</th>
    <th>タイプ</th>
    <th>都道府県</th>
    <th>住所</th>
  <tr>
    <% @facilities.each do |facility|%>
      <tr>
      <td> <%= image_tag (facility.image.url(:thumb).to_s)if facility.image && facility.image.url %></td>
      <td><%= facility.user.name=%></td>
      <td><%= facility.title %> </td>
      <td><%= facility.content %> </td>
      <td><%= facility.types %> </td>
      <td><%= facility.prefecture %> </td>
      <td><%= facility.address %> </td>
        <td><%= link_to '詳細へ', facility_path(facility.id)%></td>
      <% if facility.user_id == current_user.id %>
        <td><%= link_to '編集へ', edit_facility_path(facility.id)%></td>
        <td><%= link_to '削徐', facility_path(facility.id), method: :delete,data:{ confirm: '本当に削除していいですか？' } %></td>
      <% end %>
    <% end %>
  </tr>
</table>
</div>
<%= paginate @facilities %>
